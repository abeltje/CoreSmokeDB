#! /usr/bin/perl
use warnings;
use strict;
use Data::Dumper; $Data::Dumper::Indent = 1; $Data::Dumper::Sortkeys = 1;

use constant URL => 'http://gateway.test-smoke.org/report';

use LWP::UserAgent;
use JSON::PP;

my %opt = (
    get => undef,
    post => undef,
);
use Getopt::Long;
GetOptions \%opt => qw/
    get|g=i
    post|p=s
/;

my $ua = LWP::UserAgent->new();
my $result;

if ( defined $opt{'get'} ) {
    $result = $ua->get(URL() . "?id=$opt{'get'}")
}
else {
    use autodie;
    open my $fh, '<', $opt{'post'};
    my $json = do { local $/; <$fh> };
    close $fh;
    my $struct = JSON::PP->new()->utf8(1)->decode($json);

    $result = $ua->post(URL(), {json => $json});
}

print $result->content;
