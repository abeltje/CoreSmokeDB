#! /usr/bin/perl
use 5.01000;
use warnings;
use strict;

use lib 'lib';
use lib '../lib';

use Cwd qw/abs_path/;
use Dancer::Config;
use Dancer;
use Test::Smoke::Gateway::Dancer;
use Test::Smoke::Gateway::Schema;
use Test::Smoke::Gateway;
use Try::Tiny;

my $gw = Test::Smoke::Gateway->new(
    schema => Test::Smoke::Gateway::Schema->connect(
        config->{db_dsn},
        config->{db_usr},
        config->{db_pwd},
    ),
) or die "No gateway: $@";

set views => path(abs_path(dirname(__FILE__)), 'templates');

pass_gateway($gw);
dance();
